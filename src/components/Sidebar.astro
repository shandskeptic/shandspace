---
import SidebarLink from '../components/SidebarLink.astro';

export interface Props {
    brand: string;
}

const { brand } = Astro.props;
---

<aside class="sidebar">
    <div class="brand">
        <a href="/"><i class="fa-solid fa-terminal"></i>{brand}</a>
    </div>
    <ul class="sidebar-list">
        <li class="sidebar-item">
            <SidebarLink href="/"><i class="fa-sharp fa-solid fa-xmark"></i> <span class="sidebar-name">Home.</span></SidebarLink>
        </li>
        <li class="sidebar-item">
            <SidebarLink href="/about"><i class="fa-sharp fa-solid fa-xmark"></i> <span class="sidebar-name">About.</span></SidebarLink>
        </li>
        <li class="sidebar-item">
            <SidebarLink href="/blog"><i class="fa-sharp fa-solid fa-xmark"></i> <span class="sidebar-name">Blog.</span></SidebarLink>
        </li>
        <li class="sidebar-item">
            <SidebarLink href="/more"><i class="fa-sharp fa-solid fa-xmark"></i> <span class="sidebar-name">More.</span></SidebarLink>
        </li>
    </ul>
</aside>
